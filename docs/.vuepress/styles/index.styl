@font-face {
  font-family: Roboto;
  src: url('/theme/Roboto-Regular.ttf');
}

body {
  font-family: Roboto, sans-serif;
}

.page h1 {
  color: #000000;
}

.theme-container .navbar {
  background: white;
  height: 8.5rem;
}

.theme-container .entando-navbar {
  color: white;
  background-color: #000000;
  font-size: 20px;
  font-variant: small-caps;
  padding: 0 1.5rem;
  margin: 0 -1.5rem;
  line-height: 4rem;
}

.theme-container .entando-navbar a:hover {
  color: white;
  border-bottom: #0098DF solid 2px;
}

.theme-container .entando-navbar .search-box{
  float:right;
}

.theme-container .sidebar {
  top: 8.5rem;
}

.theme-container .navbar .logo {
  height: auto !important;
  max-height: 2.5rem;  /* regola tu la misura */
  width: auto;
  max-width: 100%;
  object-fit: contain;
}

.theme-container .navbar .site-name {
  color: white;
}

.theme-container .navbar .links, .theme-container .navbar .links a:hover  {
  background: transparent;
  color: #000000;
  font-size: 20px;
  font-variant: small-caps;
}

.theme-container .navbar .home-link * {
  vertical-align: middle;
}

.theme-container .navbar a.repo-link {
  display: none;
}

.theme-container .theme-default-content:not(.custom) {
  max-width: 740px;
  margin: 0 auto;
  padding: 2rem 2.5rem;
}

.theme-default-content:not(.custom) > h1:first-child,
.theme-default-content:not(.custom) > h2:first-child,
.theme-default-content:not(.custom) > h3:first-child,
.theme-default-content:not(.custom) > h4:first-child,
.theme-default-content:not(.custom) > h5:first-child,
.theme-default-content:not(.custom) > h6:first-child {
  margin-top: 1.5rem;
}

.theme-default-content:not(.custom) > .custom-block:first-child {
  margin-top: 8rem;
}

.nav-item a, .nav-item .title {
  font-family: 'Roboto', sans-serif !important;
  font-variant: small-caps;
  font-weight: 500 !important;
  color: $accentColor;
}

.nav-links .nav-item .title {
  font-size: 1.25rem;
  line-height: 2rem;
}

.nav-item a:hover, .nav-item a.router-link-active {
  font-style: text-underline;
}

.nav-links .dropdown-wrapper .arrow {
  display:none;
}

@media (max-width: 719px) {
  .dropdown-wrapper .dropdown-title {
    color: $accentColor !important;
  }

.theme-container .navbar .logo {
   max-height: 1.5rem;  /* riduci ancora un po' su mobile */
 }

  .theme-container .navbar .entando-navbar {
    display:none;
  }
}

@media print {
  .navbar,
  .sidebar,
  .sidebar-mask,
  .page-edit,
  .page-nav {
    display: none;
  }
}

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active {
  border-bottom: 2px solid #0098df !important;
}

.nav-links .icon.outbound {
  display: none;
}

.navbar a .can-hide {
  display: none;
}

.nav-dropdown {
  z-index: 100;
}

.nav-dropdown .dropdown-item, .nav-dropdown .dropdown-item a:hover,.dropdown-item a.router-link-active {
  color: #000000 !important;
}

.links .search-box input {
  border: 1px solid #000000;
  border-radius: 0;
}

.links .search-box .suggestions {
  font-size: 1.1rem;
}

.theme-container .sidebar {
  background: #F3F4F8;
}

.theme-container .sidebar-button {
  float:right;
  position: relative;
}

.theme-container .sidebar > .sidebar-links {
  padding-top: 0;
}

.sidebar-group.is-sub-group > .sidebar-heading:not(.clickable) {
  opacity: 1 !important;
}

.sidebar-sub-headers a.sidebar-link.active {
  font-weight: 900 !important;
}

.page .custom-block.tip {
  border-color: #00A0DF;
  background: #F3F4F8;
}
.huggingface-button {
  display: inline-flex;
  align-items: center;
  gap: 8px; /* spazio tra icona e testo */
  background-color: #ff9900; /* arancione HuggingFace, più visibile */
  color: white;
  padding: 8px 16px;
  border-radius: 8px;
  font-weight: bold;
  text-decoration: none;
  transition: background 0.2s;
}

.huggingface-button img {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1);
}


/* Container centrale dei testi e pulsanti */
.begin-developing .width-container {
  display: flex;
  flex-direction: column;
  align-items: center; /* centra i pulsanti e i testi */
  justify-content: center;
  text-align: center;
  padding-top: 6rem; /* aumenta questo valore per spostare tutto più in basso */
}

/* Pulsanti uniformi neri */
.button-container a {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background-color: #000000; /* colore nero */
  color: white; /* testo bianco */
  padding: 10px 20px;
  border-radius: 8px;
  font-weight: bold;
  text-decoration: none;
  margin: 0 10px 10px 0; /* spazio tra i pulsanti */
  transition: background 0.2s;
}

.button-container a img {
  width: 20px;
  height: 20px;
}

.button-container a:hover {
  background-color: #222222; /* effetto hover leggermente più chiaro */
}

/* Allinea verticalmente tutte le icone dei pulsanti */
.button-container a {
  display: inline-flex;
  align-items: center; /* centra verticalmente icona e testo */
  justify-content: center;
  gap: 8px;
  background-color: #000000; /* colore nero */
  color: white;
  padding: 10px 20px;
  border-radius: 8px;
  font-weight: bold;
  text-decoration: none;
  margin: 0 10px 10px 0;
  transition: background 0.2s;
}

/* Icone pulsanti */
.button-container a img {
  width: 20px;
  height: 20px;
  object-fit: contain;
  vertical-align: middle; /* forza allineamento verticale */
}

/* Se vuoi spostare leggermente GitHub e HuggingFace più in basso */
.button-container a.github, 
.button-container a.huggingface-button {
  margin-top: 2px; /* regola questo valore finché non sono allineati */
}

.button-container {
  display: flex;
  justify-content: center;
  gap: 10px; /* spazio tra pulsanti */
}


/* Hover */
.button-container a:hover {
  background-color: #222222;
}
.page-edit {
  display: none !important;
}

/* Titolo principale */
.begin-developing .width-container h1:first-child {
  font-size: 4rem;          /* aumenta la grandezza */
  font-weight: 900;         /* più grassetto */
  line-height: 1.2;         /* distanza tra righe */
  letter-spacing: 2px;      /* spazio tra lettere */
  color: #000000;           /* nero elegante */
  margin-bottom: 0.5rem;    /* margine inferiore */
  text-transform: uppercase; /* tutto maiuscolo */
  text-shadow: 2px 2px 4px rgba(0,0,0,0.2); /* leggerissima ombra */
  transition: all 0.3s ease;
}

/* Seconda riga del titolo "to Villanova" */
.begin-developing .width-container h1:nth-child(2) {
  font-size: 3.5rem;
  font-weight: 800;
  line-height: 1.2;
  letter-spacing: 1.5px;
  color: #0098DF;           /* puoi cambiare colore per evidenziare */
  margin-bottom: 1rem;
  text-transform: uppercase;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.15);
}

.villanova {
  color: #8000FF !important; /* viola brillante */
  font-weight: 900 !important;
  font-size: 3.5rem !important;
  text-transform: uppercase;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.15);
}

.theme-container .entando-navbar .search-box,
.theme-container .navbar .search-box {
  display: none !important;
}


/* Copy-code plugin to avoid extra whitespace */
pre .code-copy {
  margin-top: -0.85rem;
  color: #CCC;
}


